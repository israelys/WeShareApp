<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E8E8">

    <TextView
        android:padding="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/add_your_comment"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/scroll_response_comment" >


        <EditText
            android:gravity="top"
            android:background="#C7DBF0"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offer_comment"
            android:minLines="15"/>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSendText"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:id="@+id/btn_sned_offer"/>

</LinearLayout>